#!/bin/sh

case "$0" in *++) cc=clang++ ;; esac

target="${0##*/}"
target="${target%-*}"

sdk="${_SDK:-$("$target-sdkpath")}"

if [ -d "$sdk/var/usr" ]; then
    includeflags="-I$sdk/var/usr/include"
    libflags="-L$sdk/var/usr/lib"
fi

exec ${cc:-clang} \
    -target "$target" \
    --config-system-dir="${0%/*}/../etc/iphoneports" \
    -isysroot "$sdk" \
    "$includeflags" \
    "$libflags" \
    -Wno-unused-command-line-argument \
    "$@"
