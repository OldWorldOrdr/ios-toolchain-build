#!/bin/sh
cd "${0%/*}" || exit 1

if [ -z "$1" ]; then
    printf '%s\n' "Usage: ${0##*/} <target>"
    exit 1
fi

for target in "$@"; do
    for bin in ../libexec/cctools/*; do
        ln -sf "$bin" "$target-${bin##*/}"
    done
    for bin in ../libexec/iphoneports/*; do
        ln -sf "$bin" "$target-${bin##*/}"
    done
done

[ -d "../share/iphoneports/$target" ] || printf "Don't forget to add an sdk for your target\n"
